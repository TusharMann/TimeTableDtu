<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="timetable.insectiousapp.com.timetable">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.NewClassroomDetailActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.NewClassroomTimeTable"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.SetWriteKeyActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.UpdateSingleDayTTActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activities.UpdateDefaultTimeTableActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activities.LoadList"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activities.WeekDayTimeTableActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activities.SelectedIdTimetable"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>